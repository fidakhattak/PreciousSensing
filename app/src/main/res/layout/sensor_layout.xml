<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="6dip">

    <TextView
        android:id="@+id/sensorName"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="@string/sensorDisplayString"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sensorValue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="132dp"
        android:indeterminate="false"
        android:max="100" />

    <TextView
        android:id="@+id/sensorUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/sensorName"
        android:layout_below="@+id/sensorName"
        android:layout_marginRight="52dp"
        android:paddingLeft="20dp"
        android:text="@string/defaultUnit"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000" />


    <TextView
        android:id="@+id/sensorValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sensorUnit"
        android:layout_gravity="right"
        android:layout_toLeftOf="@+id/sensorUnit"
        android:text="@string/defaultDisplayValue"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000" />

</RelativeLayout>